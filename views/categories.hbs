<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Categories
        <a href="/categories/add" class="btn btn-success float-end">Add Category</a>
      </h2>
      <hr />
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Category ID</th>
              <th>Category Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                <td><a
                    href="/items?category={{this.id}}"
                  >{{this.category}}</a></td>
                <td>
                  <a
                    href="/categories/delete/{{this.id}}"
                    class="btn btn-danger"
                  >Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-md-12 text-center">
        {{#unless categories}}
          <strong>{{message}}</strong>
        {{/unless}}
      </div>
    </div>
  </div>
</div>