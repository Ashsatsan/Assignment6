<div class="row">
  <div class="col-md-12">
    <h2>Register</h2>
    <hr />
    {{#if errorMessage}}
      <div class="alert alert-danger"><strong>Error:</strong> {{errorMessage}}</div>
    {{/if}}
    {{#if successMessage}}
      <div class="alert alert-success"><strong>Success:</strong> {{successMessage}}
        <a class="btn btn-success pull-right" href="/login">Proceed to Log in</a>
      </div>
    {{else}}
      <form action="/register" method="post">
        <div class="row mt-2">
          <div class="col-12">
            <div class="form-group" style="margin-bottom: 5px;">
              <input type="text" class="form-control" id="userName" name="userName" placeholder="User Name" {{#if userName}}value="{{userName}}"{{/if}} required>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12">
            <div class="form-group" style="margin-bottom: 5px;">
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12">
            <div class="form-group" style="margin-bottom: 5px;">
              <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password" required>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12">
            <div class="form-group" style="margin-bottom: 5px;">
              <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12 mb-2">
            <button type="submit" class="btn btn-primary float-right">Register</button>
          </div>
        </div>
      </form>
    {{/if}}
  </div>
</div>
