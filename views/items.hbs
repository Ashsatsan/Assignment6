<div class="row">
  <div class="col-md-12">
    <h2>
      Items
      <a href="/items/add" class="btn btn-success float-end">Add Item</a>
    </h2>
    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.title}}</td>
              <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
              <td>{{this.price}}</td>
              <td>
                {{#if this.category}}
                  <a href="/items?category={{this.category}}">
                    {{this.category}}
                  </a>
                {{/if}}
              </td>
              <td>{{this.published}}</td>
              <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-md-12 text-center">
      {{#unless items}}
        <strong>{{message}}</strong>
      {{/unless}}
    </div>
  </div>
</div>